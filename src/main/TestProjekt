package TestProjekt;

import org.jboss.arquillian.container.test.api.Deployment;
import org.jboss.arquillian.junit.Arquillian;
import org.jboss.shrinkwrap.api.ShrinkWrap;
import org.jboss.shrinkwrap.api.asset.EmptyAsset;
import org.jboss.shrinkwrap.api.spec.JavaArchive;
import org.junit.Assert;
import org.junit.Test;
import org.junit.runner.RunWith;
import sun.applet.Main;

import java.util.Date;

/**
 * Created by pamat on 08.09.2017.
 */
@RunWith(Arquillian.class)
public class MainTest {
    @org.junit.Test
    public void main() throws Exception {
    }

    @Deployment
    public static JavaArchive createDeployment() {
        return ShrinkWrap.create(JavaArchive.class)
                .addClass(Main.class)
                .addAsManifestResource(EmptyAsset.INSTANCE, "beans.xml");
    }
    @Test
    public void testAdd1()throws Exception{
        Date date = new Date(2017,9,8,23,00,00);
        Assert.assertEquals(date,"NIGHT");
}
    @Test
    public void testAdd2()throws Exception{
        Date date =new Date(2017,9,8,5,59,59);
        Assert.assertEquals(date,"NIGHT");
    }
    @Test
    public void testAdd3()throws Exception{
        Date date =new Date(2017,9,8,23,00,01);
        Assert.assertEquals(date,"NIGHT");
    }
    @Test
    public void testAdd4()throws Exception{
        Date date = new Date(2017,9,8,8,00,00);
        Assert.assertEquals(date,"MORNING");
    }
    @Test
    public void testAdd5()throws Exception{
        Date date =new Date(2017,9,8,7,35,59);
        Assert.assertEquals(date,"MORNING");
    }
    @Test
    public void testAdd6()throws Exception{
        Date date =new Date(2017,9,8,9 ,00,01);
        Assert.assertEquals(date,"DAY");
    }
    @Test
    public void testAdd7()throws Exception{
        Date date =new Date(2017,9,8,18,59,59);
        Assert.assertEquals(date,"DAY");
    }
    @Test
    public void testAdd8()throws Exception{
        Date date =new Date(2017,9,8,16,59,50);
        Assert.assertEquals(date,"DAY");
    }



}
